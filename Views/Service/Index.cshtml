<div class="portlet-body">
    <ul class="nav nav-tabs">
        @{
            int i = 0;
        }
        @foreach (ServiceViewModel service in ViewBag.serviceCompanyList)
        {
            string idName = "#tab_" + service.companyName;
            if (i == 0)
            {
                i++;
                <li class="active">
                    <a href=@idName data-toggle="tab" aria-expanded="false">@service.companyName</a>
                </li>
            }
            else
            {
                <li class="jroge">
                    <a href=@idName data-toggle="tab" aria-expanded="false">@service.companyName</a>
                </li>
            }
        }
    </ul>
    <div class="tab-content">
        @foreach (ServiceViewModel service in ViewBag.serviceCompanyList)
        {
            string idName = "tab_" + service.companyName;
            if (i == 1)
            {
                i++;
                <div class="portlet light portlet-fit tab-pane fade active in" id=@idName>
                    <div class="portlet-body" style="padding:2px">
                        <div class="mt-element-list">
                            <div class="mt-list-container list-default" style="padding:5px">
                                <ul style="margin:0%;padding:0%;">
                                    @foreach (ServiceModel onlyService in service.serviceList)
                                    {
                                        <li class="mt-list-item">
                                            <div class="operationTitle">
                                                <img src="~/images/operation-running-icon.png" width="40px" height="40px" style="margin:0 2%;" />
                                                <div class="list-item-content">
                                                    <h4>
                                                        <a href=""><b>@onlyService.name</b></a>
                                                    </h4>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="portlet light portlet-fit tab-pane fade in" id=@idName>
                    <div class="portlet-body" style="padding:2px">
                        <div class="mt-element-list">
                            <div class="mt-list-container list-default" style="padding:5px">
                                <ul style="margin:0%;padding:0%;">
                                    @foreach (ServiceModel onlyService in service.serviceList)
                                    {
                                        <li class="mt-list-item">
                                            <div class="operationTitle">
                                                <img src="~/images/operation-running-icon.png" width="40px" height="40px" style="margin:0 2%;" />
                                                <div class="list-item-content">
                                                    <h4>
                                                        <a href=""><b>@onlyService.name</b></a>
                                                    </h4>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
