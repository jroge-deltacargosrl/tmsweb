@model TMS_Web.Models.UserModel;
@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/Login.css" />
<h1>Iniciar sesión</h1>
<form class="needs-validation loginForm" asp-action="Index" asp-Controller="Operation" method="post">
    <div class="form-row">
        <div class="col-md-12 mb-3">
            <input asp-for="email" type="email" value=@ViewBag.antiguoUsuario class="form-control">
            @if (ViewBag.estadoUsuario == 1)
            {
                <div class="invalid-feedback">
                    Usuario no existe
                </div>
            }
            else if (ViewBag.estadoUsuario == 2)
            {
                <div class="invalid-feedback">
                    Debe introducir un Usuario
                </div>
            }
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-12 mb-3">
            <input type="password" asp-for="password"  class="form-control">
            @if (ViewBag.estadoContraseña == 1)
            {
               <div class="invalid-feedback">
                    Contraseña incorrecta.
                </div>
            }
            else if (ViewBag.estadoContraseña == 2)
            {
                 <div class="invalid-feedback">
                    Debe introducir una Contraseña.
                </div>
            }
        </div>
    </div>
    <button class="btn btn-primary submit" type="submit">Ingresar</button>
</form>